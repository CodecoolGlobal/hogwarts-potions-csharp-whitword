@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HogwartsPotions.Pages.BrewPotion
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Brew Potion";
}
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body>
<h4>Create potion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Pages" asp-action="BrewPotion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Potion.StudentID" class="control-label"></label>
                <input asp-for="@Model.Potion.StudentID" class="form-control" />
                <span asp-validation-for="@Model.Potion.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-secondary" asp-page="/Index">Back to List</a>
</div>
</body>
